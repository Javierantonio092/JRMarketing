@model JRMarketing.Gui.Models.Consulta
@{
    ViewData["Title"] = "Restaurantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   

@if (Model.Restaurante.Count() > 0)
{
    int n = 1;
    <main id="main" role="main">
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-12" id="collection-heading">
                        <span>Restaurantes</span>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.Restaurante)
                    {
                        
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <a asp-controller="Consult" asp-action="Advertisements" asp-route-Id="@item.Id">
                                    <img src="~/myimages/@item.FotografiaR" alt="Imagen de perfil">
                                </a>
                                <div class="card-body">
                                    <p style="text-align:center; font-weight:bold">@item.NombreRestaurante</p>
                                    <p class="card-text maximo">@item.DescripcionR</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <p class="max-text">@item.DireccionR @item.CiudadR</p>
                                        </div>
                                        <small class="text-muted" style="margin-bottom: 14px;">@item.CoidgoPostalR</small>
                                    </div>
                                </div>
                            </div>
                        </div>                            
                        n++;
                        @if (n > 30)
                        {
                            break;
                        }

                    }
                </div>
            </div>
        </div>
    </main>
}
else
{
    <h2 style="text-align:center; margin-top: 150px; margin-bottom: 180px;">No se encontraron resultados</h2>
}
<script>
    [...document.getElementsByClassName("maximo")].forEach(function (e) {
        e.innerHTML = e.innerHTML.replace(/(.{1,70})(.*)/g, "$1...");
    });
    [...document.getElementsByClassName("max-text")].forEach(function (e) {
        e.innerHTML = e.innerHTML.replace(/(.{1,40})(.*)/g, "$1...");
    });
</script>
