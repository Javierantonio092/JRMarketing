@model JRMarketing.Gui.Models.UsuarioRequestDto
@{ Layout = "_Layout"; ViewBag.Title = "Add a Reservation";}

<h2>Agregar Usuario Cliente <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a></h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Usuario:</label>
        <input class="form-control" name="NombreUsuario" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Contraseña:</label>
        <input class="form-control" name="Contrasenia" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Nombre:</label>
        <input class="form-control" name="Nombre" />
    </div>
    <div class="form-group">
        <label for="Name">Apellidos:</label>
        <input class="form-control" name="Apellidos" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Direccion:</label>
        <input class="form-control" name="Direccion" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Colonia:</label>
        <input class="form-control" name="Colonia" />
    </div>
    <div class="form-group">
        <label for="Name">Estado:</label>
        <input class="form-control" name="Estado" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Ciudad:</label>
        <input class="form-control" name="Ciudad" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Codigo Postal:</label>
        <input class="form-control" name="CoidgoPostal" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Correo:</label>
        <input class="form-control" name="Correo" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Telefono:</label>
        <input class="form-control" name="TelefonoUsuario" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Tipo:</label>
        <input class="form-control" name="Tipo" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Start Location</th>
                <th>End Location</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.NombreUsuario</td>
                <td>@Model.Contrasenia</td>
                <td>@Model.Nombre</td>
                <td>@Model.Apellidos</td>
                <td>@Model.Direccion</td>
                <td>@Model.Colonia</td>
                <td>@Model.Estado</td>
                <td>@Model.Ciudad</td>
                <td>@Model.CoidgoPostal</td>
                <td>@Model.Correo</td>
                <td>@Model.TelefonoUsuario</td>
                <td>@Model.Tipo</td>
            </tr>
        </tbody>
    </table>
}